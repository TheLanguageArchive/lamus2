<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean class="org.springframework.web.context.support.ServletContextPropertyPlaceholderConfigurer">
    </bean>
    <bean id="configuration" class="nl.mpi.lamus.Configuration" factory-method="getInstance">
        <property name="amsBridge" ref="ams2Bridge" />
    </bean>
    <bean id="ams2Bridge" class="nl.mpi.lamus.ams.Ams2Bridge">
        <constructor-arg value="${ams.configPaths" />
        <constructor-arg value="${ams.authorizationService}" />
        <constructor-arg value="${ams.principalService}" />
        <constructor-arg value="${ams.authenticationService}" />
        <constructor-arg value="${ams.fabricService}" />
        <constructor-arg value="${ams.licenseService}" />
        <constructor-arg value="${ams.ruleService}" />
    </bean>
</beans>
