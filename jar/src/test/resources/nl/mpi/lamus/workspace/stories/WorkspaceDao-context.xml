<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.1.xsd" >

<!--    <bean id="workspaceDao" class="nl.mpi.lamus.dao.implementation.LamusJdbcWorkspaceDao">
        <property name="dataSource" ref="embeddedDataSource" />
    </bean>-->
    
    <beans profile="acceptance">
    
    <jdbc:embedded-database id="lamusDataSource" type="HSQL" />
    
    <jdbc:initialize-database data-source="lamusDataSource" enabled="true">
        <jdbc:script location="nl/mpi/lamus/dao/implementation/hsql_lamus2_drop.sql" />
        <jdbc:script location="nl/mpi/lamus/dao/implementation/hsql_lamus2_create.sql" />
    </jdbc:initialize-database>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="lamusDataSource"/>
    </bean>
    
    </beans>

</beans>
