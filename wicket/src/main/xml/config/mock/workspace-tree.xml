<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.springframework.org/schema/beans'
    xsi:schemaLocation='http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd'
    profile="mock">
		
    <!-- Workspace tree beans -->
    
    <bean id="workspaceTreeProvider" class="nl.mpi.archiving.tree.GenericTreeModelProviderImpl" scope="prototype">
	<constructor-arg ref="workspaceRootNode" />
    </bean>
    
    <bean id="workspaceRootNode" class="nl.mpi.lamus.web.model.mock.MockCorpusNode">
	<property name="name" value="Workspace"/>
	<property name="children">
	    <list>
		<bean class="nl.mpi.lamus.web.model.mock.MockCorpusNode">
		    <property name="parent" ref="workspaceRootNode" />
		    <property name="name" value="WorkspaceChild1"/>
		    <property name="nodeId" value="101"/>
		</bean>
		    
		<bean class="nl.mpi.lamus.web.model.mock.MockCorpusNode">
		    <property name="parent" ref="workspaceRootNode" />
		    <property name="name" value="WorkspaceChild2"/>
		    <property name="nodeId" value="102"/>
		</bean>
	    </list>
	</property>
    </bean>
</beans>
