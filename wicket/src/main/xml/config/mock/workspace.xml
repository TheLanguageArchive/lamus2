<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.springframework.org/schema/beans'
    xsi:schemaLocation='http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd'
    profile="mock">
			
    <!-- Workspace beans -->
	
    <bean id="workspaceService" class="nl.mpi.lamus.web.model.mock.MockWorkspaceService">
	<constructor-arg ref="mockCreatedWorkspace" />
        <constructor-arg> 
        <ref bean="mockWorkspaceTreeNode" />
        </constructor-arg>
    </bean>
    
    <bean id="mockCreatedWorkspace" class="nl.mpi.lamus.web.model.mock.MockWorkspace">
	<property name="workspaceID" value="1"/>
    </bean>
    
    <bean id="mockWorkspaceTreeNode" class="nl.mpi.lamus.web.model.mock.MockWorkspaceTreeNode">
	<property name="name" value="workspaceTreeNode"/>
        <property name="archiveNodeID" value="120"/>
        <property name="archiveURL" value="http://google.nl"/>
        <property name="workspaceID" value="12"/>
        <property name="type" value="METADATA"/>
        <property name="children">
	    <list>
		<bean class="nl.mpi.lamus.web.model.mock.MockWorkspaceTreeNode">
		    <property name="parent" ref="mockWorkspaceTreeNode" />
		    <property name="name" value="WorkspaceChild1"/>
		    <property name="workspaceNodeID" value="1"/>
		</bean>
		    
		<bean class="nl.mpi.lamus.web.model.mock.MockWorkspaceTreeNode">
		    <property name="parent" ref="mockWorkspaceTreeNode" />
		    <property name="name" value="WorkspaceChild2"/>
		    <property name="workspaceNodeID" value="2"/>
		</bean>
	    </list>
	</property>
    </bean>
    
</beans>
