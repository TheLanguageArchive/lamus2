<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.springframework.org/schema/beans'
    xsi:schemaLocation='http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd'
    profile="mock">
    
    <!-- Archive tree beans -->
    
    <bean id="createWorkspaceTreeProvider" class="nl.mpi.archiving.tree.GenericTreeModelProviderImpl">
	<constructor-arg ref="archiveRootNode" />
    </bean>
    
    <bean id="archiveRootNode" class="nl.mpi.lamus.web.model.mock.MockCorpusNode">
	<property name="name" value="RootNode"/>
	<property name="children">
	    <list>
		<bean class="nl.mpi.lamus.web.model.mock.MockCorpusNode">
		    <property name="parent" ref="archiveRootNode" />
		    <property name="name" value="Child1"/>
		    <property name="nodeId" value="101"/>
		</bean>
		    
		<bean class="nl.mpi.lamus.web.model.mock.MockCorpusNode">
		    <property name="parent" ref="archiveRootNode" />
		    <property name="name" value="Child2"/>
		    <property name="nodeId" value="102"/>
		</bean>
	    </list>
	</property>
    </bean>
</beans>
